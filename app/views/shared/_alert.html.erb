<div
  class="
    alert
    alert-<%= alert.variant %>
    <%= alert.dismissible ? 'alert-dismissible fade show' : '' %>
  "
  role="alert"
>
  <%= yield %>

  <% if alert.dismissible %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  <% end %>
</div>
