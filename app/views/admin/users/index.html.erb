<% if @users.empty? %>
  No results
<% else %>
  <%= render(PagyComponent.new(pagy: @pagy, pagy_link_proc: pagy_link_proc(@pagy))) %>
  <%=
    render(Admin::TableComponent.new(
      collection: @users,
      columns: [
        ['ID',      :id],
        ['email',   :email],
        ['SUUID',   proc { |user| user.suuid }],
        ['Actions', proc { |user| render(partial: 'edit_actions_index', locals: { user: user }) }],
      ],
    ))
  %>

  <%= render(PagyComponent.new(pagy: @pagy, pagy_link_proc: pagy_link_proc(@pagy))) %>
<% end %>
