<% if @users.empty? %>
  No results
<% else %>
  <%= render(PagyComponent.new(pagy: @pagy, pagy_link_proc: pagy_link_proc(@pagy))) %>

  <%=
    render(Admin::TableComponent.new(
      collection: @users,
      columns: [
        ['ID',      :id],
        ['email',   :email],
        ['PID',     proc { |user| PublicId.from_uuid(user.uuid) } ],
        ['Actions', proc { |_user| "Edit" }],
      ],
    ))
  %>

  <%= render(PagyComponent.new(pagy: @pagy, pagy_link_proc: pagy_link_proc(@pagy))) %>
<% end %>
