<% if @users.empty? %>
  No results
<% else %>

  <%=
    render(Admin::TableComponent.new(
      collection: @users,
      columns: [
        ['ID',      :id],
        ['email',   :email],
        ['PID',     proc { |item| PublicId.from_uuid(item.uuid) } ],
        ['Actions', proc { |_item| "Edit" }],
      ],
    ))
  %>

  <%== pagy_nav(@pagy) %>
<% end %>
