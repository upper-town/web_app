  No results
<% else %>
  <%=
    render(Admin::TableComponent.new(
      collection: @servers,
      columns: [
        ['ID',      :id],
        ['SUUID',   proc { |server| server.suuid }],
        ['Actions', proc { |server| render(partial: 'edit_actions_index', locals: { server: server }) }],
      ],
    ))
  %>
<% end %>

