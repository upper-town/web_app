<% content_for(:head) do %>
  <%= captcha_script_tag %>
<% end %>

<h2>Vote for you server!</h2>

<p>
  <%= @server.name %>
</p>

<%= form_with(model: @new_form, url: @new_form.url(@server), method: @new_form.method) do |form| %>
  <%= captcha_widget_tag %>

  <%= form.hidden_field(:reference, value: @reference) %>

  <%=
    form.submit(
      'Click to vote!',
      class: 'btn btn-primary',
      data: { 'turbo-submits-with' => 'Loading...' }
    )
  %>
<% end %>
