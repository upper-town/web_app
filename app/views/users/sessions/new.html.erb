<% content_for(:head) do %>
  <%= captcha_script_tag %>
<% end %>

<h2>
  <%= t("shared.nav.sign_in") %>
</h2>

<%= form_with(
  model: @session,
  method: :post,
  url: users_sessions_path,
  data: { "controller" => "form-error-messages-handler" }
) do |form| %>
  <div class="mb-3">
    <%= form.label(:email, class: "form-label") %>
    <%= form.email_field(
      :email,
      autofocus: true,
      autocomplete: "email",
      class: "form-control",
      required: true
    ) %>
  </div>

  <div class="mb-3">
    <%= form.label(:password, class: "form-label") %>
    <%= form.password_field(
      :password,
      autocomplete: "current-password",
      class: "form-control",
      required: true
    ) %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box(:remember_me, class: "form-check-input") %>
    <%= form.label(:remember_me, class: "form-check-label") %>
  </div>

  <div class="my-3">
    <%= captcha_widget_tag %>
  </div>

  <div class="mb-3">
    <%= form.submit(
      t("shared.button.submit"),
      class: "btn btn-primary",
      data: { "turbo-submits-with" => t("shared.button.loading") }
    ) %>
  </div>
<% end %>

<ul>
  <li>
    <%= t("users.sessions.new.dont_have_account") %>
    <%= link_to(t("users.sessions.new.click_here_to_sign_up"), users_sign_up_path) %>
  </li>
  <li>
    <%= t("users.sessions.new.forgot_your_password") %>
    <%= link_to(t("users.sessions.new.click_here_to_reset_password"), new_users_password_reset_path) %>
  </li>
</ul>
