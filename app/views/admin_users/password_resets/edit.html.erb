<h2>
  <%= t("admin_users.password_resets.edit.title") %>
</h2>

<%= form_with(
  model: @password_reset,
  method: :put,
  url: admin_users_password_reset_path,
  data: { "controller" => "form-error-messages-handler" }
) do |form| %>
  <%= form.hidden_field(:token) %>

  <div class="mb-3">
    <%= form.label(:code, class: "form-label") %>
    <%= form.text_field(
      :code,
      class: "form-control",
      autocomplete: "off",
      aria: { describedby: "code-help" },
      required: true
    ) %>
    <div id="code-help" class="form-text">
      <%= t("admin_users.password_resets.edit.code_help") %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label(:password, class: "form-label") %>
    <%= form.password_field(
      :password,
      autocomplete: "new-password",
      class: "form-control",
      aria: { describedby: "password-help" },
      required: true
    ) %>
    <div id="password-help" class="form-text">
      <%= t("admin_users.password_resets.edit.password_help") %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit(
      t("admin_users.password_resets.edit.submit"),
      class: "btn btn-primary",
      data: { "turbo-submits-with" => t("shared.button.loading") }
    ) %>
  </div>
<% end %>
