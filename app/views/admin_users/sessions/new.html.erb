<% content_for(:head) do %>
  <%= @captcha.script_tag %>
<% end %>

<h2>Sign in (Admin)</h2>

<%= render("admin_users/shared/error_messages", resource: resource) %>

<%= form_with(model: resource, url: session_path(resource_name)) do |form| %>
  <div class="mb-2">
    <%= form.label(:email) %><br />
    <%= form.email_field(:email, autofocus: true, autocomplete: "email") %>
  </div>

  <div class="mb-2">
    <%= form.label(:password) %><br />
    <%= form.password_field(:password, autocomplete: "current-password") %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-2">
      <%= form.check_box(:remember_me) %>
      <%= form.label(:remember_me) %>
    </div>
  <% end %>

  <div class="my-2">
    <%= @captcha.widget_tag %>
  </div>

  <div class="mb-2">
    <%=
      form.submit(
        "Sign in",
        class: 'btn btn-primary',
        data: { 'turbo-submits-with' => 'Loading...' }
      )
    %>
  </div>
<% end %>

<%= render("admin_users/shared/links") %>
