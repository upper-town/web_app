<% content_for(:head) do %>
  <%= captcha_script_tag %>
<% end %>

<h2>
  Sign In
</h2>

<%= form_with(model: @new_form, url: @new_form.url, html: { method: @new_form.method }) do |form| %>
  <div class="mb-3">
    <%= form.label(:email, 'Email address', class: 'form-label') %>
    <%= form.email_field(
      :email,
      autofocus: true,
      autocomplete: 'email',
      class: 'form-control'
    ) %>
  </div>

  <div class="mb-3">
    <%= form.label(:password, 'Password', class: 'form-label') %>
    <%= form.password_field(:password, autocomplete: 'current-password', class: 'form-control') %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box(:remember_me, class: 'form-check-input') %>
    <%= form.label(:remember_me, class: 'form-check-label') %>
  </div>

  <div class="my-3">
    <%= captcha_widget_tag(theme: 'light') %>
  </div>

  <div class="mb-3">
    <%= form.submit(
      'Submit',
      class: 'btn btn-primary',
      data: { 'turbo-submits-with' => 'Loading...' }
    ) %>
  </div>
<% end %>
