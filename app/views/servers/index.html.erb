<%= form_with(
  method: :get,
  data: {
    'controller' => 'servers',
    'action' => 'change->servers#filter'
  },
  class: 'mb-2'
) do |form| %>
  <%= render(partial: 'shared/game_select', object: GameSelectPresenter.new(
    form,
    only_in_use: true,
    blank_name: 'All',
    selected_value: @selected_value_game_id
  )) %>
  <div class="flex">
    <%= render(partial: 'period_select', object: PeriodSelectPresenter.new(
      form,
      selected_value: @selected_value_period
    )) %>
    <%= render(partial: 'country_select', object: CountrySelectPresenter.new(
      form,
      only_in_use: true,
      blank_name: 'All',
      selected_value: @selected_value_country_code
    )) %>
  </div>
<% end %>

<%= render(partial: 'shared/pagination', object: PaginationPresenter.new(@pagination, first_icon: '1st')) %>

<% if @servers.empty? %>
  No results
<% else %>
  <ul>
    <% @servers.each do |server| %>
      <li>
        <%=
          render(partial: 'index_result', object: Servers::IndexResultPresenter.new(
            server: server,
            server_stats_hash: @server_stats_hash[server.id] || {},
            period: @period,
            country_code: @country_code
          ))
        %>
      </li>
    <% end %>
  </ul>

  <%= render(pagination_component) %>
<% end %>
