<%= country_select.form.select(
  :country_code,
  (
    options_for_select(
      [country_select.blank_option],
      country_select.selected_value
    ) + options_for_select(
      country_select.popular_options,
      country_select.selected_value
    ) + tag.hr + options_for_select(
      country_select.other_options,
      country_select.selected_value
    )
  ),
  {},
  {
    class: 'form-select mb-2',
    data: { 'controller' => 'country-select' }
  }
) %>
