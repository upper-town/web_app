{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "esbuild": "^0.18.11",
    "postcss": "^8.4.25",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.0",
    "tailwindcss": "^3.3.2"
  },
  "scripts": {
    "build": "NODE_ENV=production esbuild app/javascript/*.* --bundle --minify --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build-dev": "NODE_ENV=development esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets-development",
    "build:css": "NODE_ENV=production postcss ./app/assets/stylesheets/application.postcss.css -o ./app/assets/builds/application.css --map",
    "build-dev:css": "NODE_ENV=development postcss ./app/assets/stylesheets/application.postcss.css -o ./app/assets/builds/application.css --map"
  }
}
